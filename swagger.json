        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string"
                },
                "senha": {
                  "type": "string"
                }
              },
              "example": {
                "email": "Joao.Maria@email.com",
                "senha": "senha123"
              }
            }
          }
        }
      },
      "responses": {
        "400": {
          "description": "Email/Senha incorreto"
